<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

   <!-- 系统工作路径 -->
   <Define name='home'>/studio/console/mo-game</Define>
   <Define name='store'>/studio/console/mt-store/game</Define>
   <Define name='home.config'>${home}/webroot/WEB-INF/classes</Define>

   <!-- 游戏导出路径 -->
   <Define name='game.export.server'>D:/WP-Server</Define>
   <Define name='game.export.client'>D:/WP-Client</Define>
   <Define name='game.export.tools'>D:/WP-Tools</Define>

   <!-- 包含：系统环境设定 -->
   <Include>${home.config}/common/config.xml</Include>
   <Include>${home.config}/common/define.xml</Include>

   <!-- 包含：系统服务设定 -->
   <Include>${home.config}/common/mobj-core.xml</Include>
   <Include>${home.config}/common/mobj-eng.xml</Include>
   <Include>${home.config}/common/mobj-data.xml</Include>
   <Include>${home.config}/common/mobj-web.xml</Include>
   <Include>${home.config}/common/mobj-jfa.xml</Include>
   <Include>${home.config}/common/mobj-servlet.xml</Include>
   <Include>${home.config}/common/mobj-logic.xml</Include>

   <!-- 包含：核心系统设定 -->
   <Include>${home.config}/core/core.xml</Include>
   <Include>${home.config}/core/environment.xml</Include>

   <!-- 包含：游戏系统设定 -->
   <Include>${home.config}/game/editor.xml</Include>
   <Include>${home.config}/game/service.xml</Include>

</Configuration>
